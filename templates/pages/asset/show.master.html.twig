{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block container %}
    {% set character = side_menu.character %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Atout {{ asset.name }}</h1>


        {{ form_start(form) }}

        {{ form_end(form) }}

        <p>
            Atout visible par :<br>
            {% for filter in asset.assetFilters if filter.character.campaign.id == side_menu.campaign.id %}
                {{ filter.character.name }},
            {% endfor %}
        </p>


    </div>
{% endblock %}