{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block container %}
    {% set character = side_menu.character %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Atouts</h1>

        Liste des atouts
        <ul>
            {% for asset in assets %}
                <li><code><a href="{{ path('asset.show', { 'assetSlug': asset.slug }) }}">{{ asset.name }}</a></code>{{ character.hasAsset( asset ) ? 'possédé' }}</li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}