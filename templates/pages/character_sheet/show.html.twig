{% extends 'base.html.twig' %}

{% block title %}Feuille de personnage{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/character-sheet.css') }}" rel="stylesheet">
{% endblock %}

{% block container %}
    <div class="row cs-sheet">
        <div class="col-md-12" >
            <div>
                <div class="d-flex justify-content-around">
                    <div>Identité : </div>
                    <div>Métier : </div>
                </div>
                <div class="row cs-brown p-4">
                    <div class="col-6">
                    {% for characterZodiac in characterSheet.characterZodiacs %}
                        {% set title = loop.first or loop.index == 7 %}
                        <div class="row justify-content-end">
                            <div class="col-4 cs-cell-title pl-1">
                                {{ characterZodiac.zodiac.name|upper  }}
                            </div>
                            <div class="col-1 cs-cell-title">
                            </div>
                            <div class="col-2 text-center {{ title ? 'cs-cell-title ' }} ml-1">
                                {{ title ? 'Base' }}
                            </div>
                            <div class="col-2 text-center {{ title ? 'cs-cell-title ' }} ml-1">
                                {{ title ? 'Valeur' }}
                            </div>
                        </div>
                        {% for characterSkill in characterSheet.characterSkills  if characterSkill.skill.zodiac == characterZodiac.zodiac %}
                            <div class="row cs-row-content justify-content-end ">
                                {% if loop.index == 2 %}
                                    <div class="col-1 text-center mr-1 cs-b">
                                        {{ characterZodiac.level }}
                                    </div>
                                {% endif %}
                                <div class="col-4 pl-2">
                                    {{ characterSkill.skill.name|capitalize }}{{ characterSkill.skill.domainRelated ? '*' }}
                                </div>
                                <div class="col-1 text-center">
                                    {{ characterSkill.skill.open ? 'o' : 'f' }}
                                </div>
                                <div class="col-2 text-center ml-1">
                                    {{ characterSkill.level }}
                                </div>
                                <div class="col-2 text-center ml-1">
                                    {{ characterSkill.level + characterZodiac.level }}
                                </div>
                            </div>
                        {% endfor %}
                        {% if loop.index == 6 %}
                    </div>
                    <div class="col-6">
                        {% endif %}
                    {% endfor %}
                    </div>
                </div>
                <div class="row cs-brown mt-4 p-4">
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="ml-2">
                <div class="row">
                    <div class="col-6 ">
