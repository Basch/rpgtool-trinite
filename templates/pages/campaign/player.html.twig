{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block container %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{ campaign.name }}</h1>

        Vos personnages sur cette campagne:
        <ul>
            {% for character in app.user.characters if character.campaign.id == campaign.id %}
                <li><code><a href="{{ path('player.character.index', { 'characterSlug' : character.slug }) }}">{{ character.name }}</a></code></li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}