{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block container %}
    {% set character = user.character %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Objet</h1>

        {% if userCreatable %}<p><a href="{{ path( route ~ '.new') }}" class="btn btn-success" >Nouveau</a></p>{% endif %}

        Liste
        <ul>
            {% for item in items %}
                <li><code><a href="{{ path( route ~ '.show', { 'itemSlug': item.slug }) }}">{{ item }}</a></code>{{ filter.hasItem( item ) ? ' possédé' }}</li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}