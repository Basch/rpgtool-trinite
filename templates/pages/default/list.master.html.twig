{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block container %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Objet</h1>

        <p><a href="{{ path('asset.new') }}" class="btn btn-success" >Nouveau</a></p>

        Liste des atouts
        <ul>
        {% for asset in items %}
            <li><code><a href="{{ path('asset.show', { 'itemSlug': asset.slug }) }}">{{ asset }}</a></code></li>
        {% endfor %}
        </ul>

    </div>
{% endblock %}